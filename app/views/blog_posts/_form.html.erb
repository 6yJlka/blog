<!-- app/views/blog_posts/_form.html.erb -->

<%= form_with(model: blog_post, local: true) do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :image, 'Attach Image' %>
    <%= form.file_field :image, accept: 'image/*', class: 'file-input' %>
  </div>

  <div>
    <%= form.button class: "blog-buttons" %>
  </div>
<% end %>
