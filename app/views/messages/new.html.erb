<!-- app/views/messages/new.html.erb -->
<h1>New Message</h1>

<%= form_with(model: @message, url: messages_path, method: :post) do |form| %>
  <%= form.label :recipient_id, 'Recipient' %>
  <%= form.collection_select :recipient_id, User.where.not(id: current_user.id), :id, :username, prompt: 'Select a recipient' %>

  <%= form.label :content, 'Message' %>
  <%= form.text_area :content, rows: 5 %>

  <%= form.submit 'Send Message', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Messages', messages_path, class: 'btn btn-secondary' %>
