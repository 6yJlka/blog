<h1>Your Friends</h1>

<% if @friends.any? %>
  <ul>
    <% @friends.each do |friend| %>
      <li class="friend-container">
        <%= friend.username %>
        <%= button_to 'Remove', friend_path(friend), method: :delete, data: { confirm: 'Are you sure?' }, class: 'friend-buttons' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no friends. Add some!</p>
<% end %>

<h2>Add Friends</h2>
<% @users.each do |user| %>
  <li class="friend-container">
    <%= user.username %>
    <%= button_to 'Add Friend', friends_path(friend_id: user.id), method: :post, class: 'friend-buttons' %>
  </li>
<% end %>

<%= link_to 'Back to Posts', root_path, class: 'btn btn-secondary' %>
<%= link_to 'View Messages', messages_path, class: 'btn btn-primary' %>
